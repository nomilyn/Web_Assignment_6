<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Departments
            <a href="/departments/add" class="btn btn-success float-right">Add New Department</a>
        </h2>
        <hr />
        <p>
            <div class = "table-responsive">
            <table class = "table">
                <tr>
                    <th>Department Number</th>
                    <th>Department Name</th>
                    <th> </th>
                </tr>
                {{#each departments}}
                    <tr>
                        <td><a href = "/department/{{departmentId}}">{{departmentId}}</a></td>
                        <td><a href = "/employees?department={{departmentId}}">{{departmentName}}</a></td>
                        <td><a href="/departments/delete/{{departmentId}}" class="btn btn-danger">remove</a></td>
                    </tr>
                {{/each}}
            </table>
            </div>
        </p>
    </div>
    <div class="col-md-12 text-center">
        <strong>
            {{#unless departments}}
                {{message}}
            {{/unless}}
        </strong>
    </div>
</div>